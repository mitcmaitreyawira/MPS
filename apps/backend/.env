# Application
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:5174,http://localhost:5175,http://localhost:5176,http://localhost:5177,http://localhost:5178,http://localhost:5179,http://localhost:5180,http://localhost:5181,http://localhost:5182,http://localhost:5183,http://localhost:5184,http://localhost:5185

# Database
MONGODB_URI=mongodb://admin:password@localhost:27017/mps_db_unified?authSource=admin
MONGODB_TEST_URI=mongodb://localhost:27017/mern_nestjs_template_test

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redispassword

# JWT/Cookie settings
# Secret used to sign JWT tokens.  Change this in production.
JWT_ACCESS_SECRET=dev_access_secret_change_me
# Lifetime of issued access tokens (align with plan 15m)
JWT_ACCESS_EXPIRES_IN=24h
# Optional future use for refresh token features
JWT_REFRESH_SECRET=dev_refresh_secret_change_me
# Domain for auth cookies.  Should match your deployment host.
COOKIE_DOMAIN=localhost

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourapp.com

# Security
BCRYPT_ROUNDS=12
MFA_ISSUER=MERN NestJS Template

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# Monitoring
LOG_LEVEL=debug
ENABLE_SWAGGER=true

# CORS
# Commaâ€‘separated list of allowed origins for CORS requests.
CORS_ORIGIN=http://localhost:5173
# Whether browsers should include cookies and credentials with requests
CORS_CREDENTIALS=true

# Default admin credentials used by the seed script in scripts/seedDummyUser.js
ADMIN_EMAIL=admin@dev.com
ADMIN_PASSWORD=Admin123!