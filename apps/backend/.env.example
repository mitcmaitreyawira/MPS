# Application
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1

# Database
MONGODB_URI=mongodb://admin:password@localhost:27017/mps_db_unified?authSource=admin
MONGODB_TEST_URI=mongodb://localhost:27017/mern_nestjs_template_test

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT/Cookie settings
# Secret used to sign JWT tokens.  Change this in production.
JWT_ACCESS_SECRET=dev_access_secret_change_me
# Lifetime of issued access tokens
JWT_ACCESS_EXPIRES_IN=1h
# Domain for auth cookies.  Should match your deployment host.
COOKIE_DOMAIN=localhost

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourapp.com

# Frontend URLs (for password reset emails)
FRONTEND_URL=http://localhost:5173
PASSWORD_RESET_URL=${FRONTEND_URL}/reset-password

# Security
BCRYPT_ROUNDS=12
MFA_ISSUER=MERN NestJS Template

# Password Policy
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL_CHAR=true
PASSWORD_MAX_AGE_DAYS=90
PASSWORD_HISTORY_SIZE=5
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_MINUTES=15

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DEST=./uploads

# Monitoring
LOG_LEVEL=info
ENABLE_SWAGGER=true

# CORS
# Commaâ€‘separated list of allowed origins for CORS requests.  The dev
# server runs on port 5173 (and sometimes 5174), so include both.
CORS_ORIGIN=http://localhost:5173,http://localhost:5174
# Whether browsers should include cookies and credentials with requests
CORS_CREDENTIALS=true

# Default admin credentials used by the seed script in scripts/seedDummyUser.js
ADMIN_EMAIL=test@example.com
ADMIN_PASSWORD=Password123!